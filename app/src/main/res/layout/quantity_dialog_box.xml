<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/dialog_box_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input stock in quantity."
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dialog_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="fvjfvf"
            android:textAlignment="center"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/remove_quantity"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_twotone_remove_circle_24"/>

            <EditText
                android:id="@+id/quantity_edit"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Input Quantity"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20sp"
                />


            <ImageView
                android:id="@+id/add_quantity"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_twotone_add_circle_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventory_quantity_total"
                android:text="0"
                android:textColor="@color/light_grey"
                android:textSize="24sp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/ic_baseline_arrow_right_alt_24"/>

            <TextView
                android:id="@+id/inventory_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/light_grey"
                android:paddingHorizontal="20dp"
                android:text="Cancel"
                android:paddingVertical="15dp"
                android:textColor="@color/text_grey"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/blueish_purple"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                android:text="Apply"
                android:textSize="20dp"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>